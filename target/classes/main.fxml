<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
    <!-- Sidebar à gauche -->
    <left>
        <fx:include source="SideBar/SideBar.fxml" />
    </left>

    <!-- Contenu principal à droite -->
    <center>
        <StackPane>
            <AnchorPane fx:id="mainContentPane" styleClass="anchor-pane">
                <!-- Ici sera chargé le contenu spécifique à chaque page -->
                <fx:include source="Association/AllAssociation.fxml" />
            </AnchorPane>
        </StackPane>
    </center>
</BorderPane>