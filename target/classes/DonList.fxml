<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DonControllers.DonListController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Mes Dons" styleClass="title-label" />
                <ListView fx:id="donListView" prefHeight="400.0" prefWidth="800.0" VBox.vgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label fx:id="pageInfoLabel" text="Affichage 1 à 10 sur 0 dons" />
                        <HBox spacing="5.0">
                            <Label text="Éléments par page:" />
                            <ComboBox fx:id="itemsPerPageComboBox" prefWidth="70.0" />
                        </HBox>
                        <Pagination fx:id="pagination" maxPageIndicatorCount="5" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>